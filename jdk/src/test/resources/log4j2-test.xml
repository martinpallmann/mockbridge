<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>
    <Console name="STDOUT">
      <PatternLayout pattern="%highlight{%p} %c{1}: %m%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Root level="WARN">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>

</Configuration>
